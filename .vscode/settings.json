{
    "go.useLanguageServer": true,
    "go.formatTool": "gofmt",
    "go.lintTool": "golangci-lint",
    "go.lintOnSave": "package",
    "go.testFlags": [
        "-count=1"
    ],
    "go.testTimeout": "20s",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "files.watcherExclude": {
        "**/.git/**": true,
        "**/vendor/**": true,
        "**/bin/**": true,
        "**/dist/**": true
    },
    "search.exclude": {
        "**/vendor/**": true,
        "**/bin/**": true,
        "**/dist/**": true
    }
}